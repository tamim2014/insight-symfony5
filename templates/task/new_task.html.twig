
{%  extends 'base.html.twig' %}

{% block body %}
    <style>
        .example-wrapper { margin: 5em auto; max-width: 800px; width: 95%; font: 1.1em sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        h4 {text-decoration:underline;} 
        h5:nth-child(even) { background-color: #dddddd; }
    </style>

    <div class="example-wrapper">
        {# Formulaire de saisie(Accès en écriture à la BD) #}
        {{ form(form) }}

        {# Resultat de la saisie(Accès en lecture à la BD) #}
        {% if(tache.id) %} 
            <p>Vous avez ajouté  la <b>{{ tache.id }}</b>ème mission :  <b>{{ tache.task }}</b>.<small>( Prévue le  <i>{{ tache.dueDate|date('d/m/Y') }}</i> )</small></p>
            {% for tache in taches %}
                <h5>
                    {#  {{maDate|date('d/m/Y')}} converti la date en français - c ça un bon filtre ! #}
                    <span> {{ tache.id }}.....{{ tache.task }}.....{{ tache.dueDate|date('d/m/Y') }}</span>
                    <span></span>
                </h5>
            {% endfor %}
        {% endif %}
    </div>
    <small style="bottom:0; color:gray"><a href="https://symfony.com/doc/5.4/forms.html#rendering-forms" target="_blanck" style="text-decoration:none">SensioLabs</a></small> |
    <small style="bottom:0; color:gray"><a href="https://nouvelle-techno.fr/articles/8-integrer-les-donnees-dans-les-vues-symfony-6" target="_blanck">BD(Accès en lecture)</a></small> |
    <small style="bottom:0; color:gray"><a href="https://nouvelle-techno.fr/articles/mot-cle/donnees" target="_blanck">nouvelle-techno.fr</a></small>

{% endblock %}
